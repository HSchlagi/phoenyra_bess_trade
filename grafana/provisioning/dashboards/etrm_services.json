{
  "dashboard": {
    "title": "ETRM Services Monitoring",
    "tags": ["phoenyra", "etrm", "forecast", "risk", "grid"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Forecast - Price Forecast",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "pho_forecast_price_eur_mwh",
            "legendFormat": "{{horizon}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Forecast - Load Forecast",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "pho_forecast_load_mw",
            "legendFormat": "{{horizon}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Risk - VaR 99%",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "pho_risk_var_99_eur",
            "legendFormat": "VaR 99%"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "palette-classic" },
            "unit": "currencyEUR"
          }
        }
      },
      {
        "id": 4,
        "title": "Risk - Limit Utilization",
        "type": "gauge",
        "gridPos": { "x": 8, "y": 8, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "pho_risk_limit_utilization_pct",
            "legendFormat": "Utilization"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "min": 0,
            "max": 100,
            "unit": "percent",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 75 },
                { "color": "red", "value": 90 }
              ]
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Grid - Frequency",
        "type": "graph",
        "gridPos": { "x": 16, "y": 8, "w": 8, "h": 8 },
        "targets": [
          {
            "expr": "pho_grid_freq_hz",
            "legendFormat": "Frequency"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "hertz",
            "min": 49.7,
            "max": 50.3
          }
        },
        "thresholds": [
          { "value": 49.8, "color": "red" },
          { "value": 49.9, "color": "yellow" },
          { "value": 50.0, "color": "green" },
          { "value": 50.1, "color": "yellow" },
          { "value": 50.2, "color": "red" }
        ]
      },
      {
        "id": 6,
        "title": "Grid - Load",
        "type": "stat",
        "gridPos": { "x": 0, "y": 16, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "pho_grid_load_mw",
            "legendFormat": "Load"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "megawatt",
            "color": { "mode": "thresholds" }
          }
        }
      },
      {
        "id": 7,
        "title": "Forecast Jobs Total",
        "type": "stat",
        "gridPos": { "x": 8, "y": 16, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "sum(pho_forecast_jobs_total)",
            "legendFormat": "Total Jobs"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": { "mode": "thresholds" },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Service Health",
        "type": "stat",
        "gridPos": { "x": 16, "y": 16, "w": 8, "h": 4 },
        "targets": [
          {
            "expr": "up{job=~\"forecast|grid|risk\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              { "type": "value", "options": { "0": { "text": "DOWN", "color": "red" } } },
              { "type": "value", "options": { "1": { "text": "UP", "color": "green" } } }
            ]
          }
        }
      }
    ],
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}

